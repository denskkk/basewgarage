{
  "name": "wgarage-system",
  "description": "W Garage - многопользовательская система управления автосервисом с реальным временем",
  "logo": "https://img.icons8.com/color/96/000000/wrench.png",
  "keywords": ["garage", "management", "nodejs", "express", "sqlite", "websocket"],
  "repository": "https://github.com/YOUR_USERNAME/wgarage",
  "stack": "heroku-20",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "JWT_SECRET": {
      "description": "Секретный ключ для JWT токенов",
      "generator": "secret"
    },
    "NODE_ENV": {
      "description": "Режим работы приложения",
      "value": "production"
    },
    "CLIENT_URL": {
      "description": "URL клиентского приложения",
      "value": "https://your-app-name.herokuapp.com"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "cd server && npm run init-db"
  }
}
